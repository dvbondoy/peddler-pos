  <name>PeddlerPOS</name>
  <description>
        Hybrid Point of Sale
    </description>
  <author email="dvbondoy@gmail.com" href="http://example.com.com/">
      dvbondoy
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <preference name="webviewbounce" value="false"/>
